{
  "compilerOptions": {
    "target": "esnext",                       
    "module": "commonjs",                     
    "lib": ["es6"],                           
    "allowJs": true,                          
    "jsx": "react-native",                    
    "declaration": true,                   
    "removeComments": true,                
    "noEmit": true,                           
    "incremental": true,                      
    "isolatedModules": true,                  
    "strict": true,                           
    "noImplicitAny": true,                 
    "strictNullChecks": true,              
    "strictFunctionTypes": true,           
    "strictPropertyInitialization": true,  
    "noImplicitThis": true,                
    "alwaysStrict": true,                  
    "moduleResolution": "node",               
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,     
    "esModuleInterop": true                   
  },
  "exclude": [
    "node_modules"
  ]
}
